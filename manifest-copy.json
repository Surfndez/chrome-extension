
{
  "name": "Global Input",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Global Input",
  "homepage_url": "https://globalinput.co.uk/",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Global Input"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["content.js"]
  }
 ]
}
